<div>
    <h1>Entry Shift Assign</h1>
    @if (ViewBag.info != null)
    {
        <div class="alert alert-danger">
            @ViewBag.info
        </div>
    }
    <form action="/shiftassign/Entry" method="post" >
        <div class="mb-3">
            <label for="EmployeeId" class="form-label">Employee</label>
            <select name="EmployeeId" class="form-select">
                <option value="x" selected>--select employee--</option>
                @foreach (var e in ViewBag.Employees)
                {
                    <option value="@e.Id">@e.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="ShiftId" class="form-label">Shifts</label>
            <select name="ShiftId" class="form-select">
                <option value="x" selected>--select shift--</option>
                @foreach (var s in ViewBag.Shifts)
                {
                    <option value="@s.Id">@s.Name</option>
                }
            </select>
        </div>
        
        <div class="mb-3">
            <label for="FromDate" class="form-label">From Date</label>
            <input type="datetime" name="FromDate" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="ToDate" class="form-label">To Date</label>
            <input type="datetime" name="ToDate" class="form-control" required>
        </div>

        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Entry</button>
            <button class="btn btn-danger">Cancel</button>
        </div>
    </form>
</div>