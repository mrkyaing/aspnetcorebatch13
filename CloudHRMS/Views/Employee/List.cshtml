@model IList<EmployeeViewModel>
<h1>Employe List Information</h1>
@if (TempData["info"] != null)
{
    <div class="alert alert-info">
        @TempData["info"]
    </div>
}
<table class="table table-hover" id="EmployeeTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">DOB</th>
            <th scope="col">DOE</th>
           <th scope="col">Department</th>
            <th scope="col">Position</th>
            <th scope="col">Salary</th>
            <th scope="col">Phone</th>
            <th scope="col">Gender</th>
            <th scope="col">Address</th>
            @if (User.IsInRole("HR"))
            {
                <th scope="col">Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@index</th>
                <td>@item.Code</td>
                <td>                 
                    @item.Name
                    <img src="~/images/@item.ProfilePicture" class="rounded-circle" height="50" width="50" asp-append-version="true" />
                </td>
                <td>@item.Email</td>
                <td>@item.DOB.ToString("dd-MM-yyyy")</td>
                <td>@item.DOE.ToString("dd-MM-yyyy")</td>
                <td>@item.DepartmentInfo</td>
                <td>@item.PositionInfo</td>
                <td>@item.BasicSalary</td>
                <td>@item.Phone</td>
                <td>@item.Gender</td>
                <td>@item.Address</td>
                @if (User.IsInRole("HR"))
                {
                    <td>
                        <div class="btn btn-group">
                        <a href="/employee/Edit?id=@item.Id" class="btn btn-primary" role="button">Edit</a>
                        <a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id" onclick="return confirm('are you sure to delete this record?');" class="btn btn-danger" role="button"> Delete</a>
                    </div>
                </td>
                }
            </tr>
            index++;
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#EmployeeTable').DataTable();
    });
</script>